# =============================================================================
# Visa Agentic Commerce Testing Platform Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=true

# Agent Service
AGENT_HOST=0.0.0.0
AGENT_PORT=8000

# Mock Merchant
MERCHANT_HOST=0.0.0.0
MERCHANT_PORT=8001
MERCHANT_BASE_URL=http://localhost:8001
MERCHANT_NAME=Mock Merchant Store

# -----------------------------------------------------------------------------
# TAP (Trusted Agent Protocol) Configuration
# -----------------------------------------------------------------------------
# Agent identity
TAP_AGENT_ID=shopping-agent-001
TAP_AGENT_KEYID=https://registry.visa.com/agents/shopping-agent-001

# Path to Ed25519 private key for signing requests
# Generate with: python scripts/generate_keys.py
TAP_PRIVATE_KEY_PATH=config/keys/agent_private.pem

# Public key for merchant verification (same key pair)
TAP_AGENT_PUBLIC_KEY_PATH=config/keys/agent_public.pem

# Or provide keys inline (base64 encoded)
# TAP_PRIVATE_KEY=
# TAP_AGENT_PUBLIC_KEY=

# -----------------------------------------------------------------------------
# Visa MCP (Model Context Protocol) Configuration
# -----------------------------------------------------------------------------
# Get these from Visa Developer Portal: https://developer.visa.com

# MCP Server URL
MCP_BASE_URL=https://sandbox.mcp.visa.com

# VIC (Visa Intelligent Commerce) API Credentials
VIC_API_KEY=
VIC_API_KEY_SS=

# VTS (Visa Token Service) API Credentials
VTS_API_KEY=
VTS_API_KEY_SS=

# MLE (Message Level Encryption) Certificates
# Path to certificate files or inline PEM
MLE_SERVER_CERT=
MLE_PRIVATE_KEY=
KEY_ID=

# Client identifiers
EXTERNAL_CLIENT_ID=
EXTERNAL_APP_ID=

# JWT signing key (RSA private key for token generation)
USER_SIGNING_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# LLM Configuration (Optional - for advanced agent features)
# -----------------------------------------------------------------------------
# Anthropic API key for Claude
ANTHROPIC_API_KEY=

# OpenAI API key (alternative)
OPENAI_API_KEY=

# Model to use
LLM_MODEL=claude-3-sonnet-20240229

# -----------------------------------------------------------------------------
# Auth Callback Configuration
# -----------------------------------------------------------------------------
# URL where Passkey auth callbacks are sent
AUTH_CALLBACK_URL=http://localhost:8000/api/auth/callback
